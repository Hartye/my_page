<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style/about.css" />
    <link rel="stylesheet" href="/style/footer.css" />
    <link rel="stylesheet" href="/style/utils.css" />
    <link rel="stylesheet" href="/style/viewComments.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style/fonts.css" />
    <title>View Comments</title>
  </head>
  <body>
    <section class="container">
      <main>
        <h1>FeedBack</h1>
        <% comments.forEach(comment => { %>
        <div class="comment">
          <div>
            <h2><%= comment.name %></h2>
            <p><%= comment.content %></p>
          </div>
          <a href="/remove/<%= comment.id %>">
            <button>&times;</button>
          </a>
        </div>
        <br />
        <% }) %>
      </main>
      <%- include('parts/footer') %>
    </section>
  </body>
</html>
